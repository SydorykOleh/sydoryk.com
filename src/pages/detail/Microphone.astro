---
import { Image } from "astro:assets";
import DetailHeader from "../../components/DetailHeader.astro";
import DetailPostLayout from "../../layouts/DetailPostLayout.astro";


//Enter the folder address, all files will be automatically loaded according to the file name and compressed into webp format
const images = await Astro.glob('../../assets/projects/Microphone/*.{jpg,png,webp}');

---
<DetailPostLayout
	title="Microphone"
	description = 'Microphone Visualization',
	keywords = 'Microphone, Product Visualization',
>
	<div class="post">
		<main class="post-wrapper">
			<DetailHeader
			tag="PROJECT"
			description="">
					<h1 class="font-type">
						Microphone
					</h1>
			</DetailHeader>

			<section>
				<div class="content">
					<div class="row desc">
						<div class="col-1a">
							<p class="post-desc">
								Custom microphone model, and cloth reveal done in Houdini. Software: Houdini, Nuke
							</p>
						</div>
					</div>
				</div>
			</section>
			<section class="preview">
				<video width="100%" autoplay loop muted>
					<source src="/assets/projects/Microphone/microphone_with_cloth.mp4">
				</video>
				<div>
					Few images:
				</div>
				{images.map((img, index) => (
					<picture class="gsap-picture">
					  <Image src={img.default} alt={`Image ${index + 1}`}   loading="lazy" decoding="async" />
					</picture>
				  ))}
			</section>
		</main>
	</div>
</DetailPostLayout>

<style>
img{
	border:1px solid #ececec;
}
.btn{
	display: flex;
	gap: 16px;
}
</style>
