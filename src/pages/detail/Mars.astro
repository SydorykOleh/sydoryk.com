---
import { Image } from "astro:assets";
import DetailHeader from "../../components/DetailHeader.astro";
import DetailPostLayout from "../../layouts/DetailPostLayout.astro";


//Enter the folder address, all files will be automatically loaded according to the file name and compressed into webp format
const images = await Astro.glob('../../assets/projects/mars/*.{jpg,png,webp}');

---
<DetailPostLayout
	title="Mars"
	description = '270 degree Animation movie for Immersive experience',
	keywords = 'Immersium, CGI Movie',
>
	<div class="post">
		<main class="post-wrapper">
			<DetailHeader
			tag="PROJECT"
			description="">
					<h1 class="font-type">
						Mars
					</h1>
			</DetailHeader>

			<section>
				<div class="content">
					<div class="row desc">
						<div class="col-1a">
							<p class="post-desc">
								Animation movie where we visit main interest points on Mars. Movie was produced in VR and 270 degree formats<br>
								<h3>Responsibilities: </h3>
								<ul>
								<li>Build Mars landscapes using houdini</li>
								<li>Scatter assets using PCG</li>
								<li>Lighting and rendering</li>
								</ul> 
								Software used: Houdini Unreal
							</p>
						</div>
					</div>
				</div>
			</section>
			<section class="preview">
				<div>
					Some screenshots from the movie:
				</div>
				{images.map((img, index) => (
					<picture class="gsap-picture">
					  <Image src={img.default} alt={`Image ${index + 1}`}   loading="lazy" decoding="async" />
					</picture>
				  ))}
			</section>
		</main>
	</div>
</DetailPostLayout>

<style>
img{
	border:1px solid #ececec;
}
.btn{
	display: flex;
	gap: 16px;
}
</style>
